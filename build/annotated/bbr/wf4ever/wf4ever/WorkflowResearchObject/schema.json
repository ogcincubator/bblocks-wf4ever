{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A workflow research object",
  "type": "object",
  "properties": {
    "@type": {
      "oneOf": [
        {
          "const": "WorkflowResearchObject"
        },
        {
          "type": "array",
          "contains": {
            "const": "WorkflowResearchObject"
          }
        }
      ]
    },
    "aggregates": {
      "type": "array",
      "description": "Must include at least one workflow",
      "contains": {
        "type": "object",
        "properties": {
          "@type": {
            "const": "Workflow"
          }
        }
      }
    }
  },
  "required": [
    "@type",
    "aggregates"
  ]
}